{
  "name": "eventstore-interconnect",
  "version": "1.0.19",
  "description": "Eventstore interconnector",
  "author": "Alexandre Decollas <alexandre.decollas.pro@gmail.com>",
  "keywords": [
    "eventstore",
    "compatibility",
    "helper",
    "interconnect"
  ],
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "README.md"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rimraf dist && tsc -p libs/eventstore-interconnect/tsconfig.lib.json",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:usecase:srcLegDestLeg": "CASE='LEGLEG' nest start example",
    "start:usecase:srcLegDestNext": "CASE='LEGNEXT' nest start example",
    "start:usecase:srcNextDestLeg": "CASE='NEXTLEG' nest start example",
    "start:usecase:srcNextDestNext": "CASE='NEXTNEXT' nest start example",
    "start:usecase:srcNextDestLeg:debug": "CASE='NEXTLEG' node --inspect-brk -r ts-node/register -r tsconfig-paths/register apps/example/src/main.ts",
    "start:usecase:srcLegDestNext:debug": "CASE='LEGNEXT' node --inspect-brk -r ts-node/register -r tsconfig-paths/register apps/example/src/main.ts",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch usecase",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/eventstore-interconnect-project/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "1.0.2",
    "@nestjs/core": "^8.0.0",
    "@nestjs/cqrs": "7.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/terminus": "8.0.1",
    "@ntegral/nestjs-sentry": "1.0.4",
    "@sentry/node": "^6.13.3",
    "class-transformer": "^0.4.0",
    "class-validator": "0.13.1",
    "geteventstore-promise": "3.2.5",
    "nanoid": "^3.1.30",
    "nestjs-context": "0.12.0",
    "@eventstore/db-client": "2.1.1",
    "nestjs-geteventstore-legacy": "npm:nestjs-geteventstore@1.6.4",
    "nestjs-geteventstore-next": "npm:nestjs-geteventstore@5.0.2",
    "nestjs-pino-stackdriver": "^2.1.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@eventstore-interconnect/eventstore-interconnect(|/.*)$": "<rootDir>/libs/eventstore-interconnect/src/$1"
    }
  }
}
