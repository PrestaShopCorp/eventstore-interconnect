{
  "name": "eventstore-interconnect",
  "version": "1.0.30",
  "description": "Eventstore interconnector",
  "author": "Alexandre Decollas <alexandre.decollas.pro@gmail.com>",
  "keywords": [
    "eventstore",
    "compatibility",
    "helper",
    "interconnect"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PrestaShopCorp/eventstore-interconnect"
  },
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "README.md"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "readmeFilename": "README.md",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rimraf dist && tsc -p libs/eventstore-interconnect/tsconfig.lib.json",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:usecase:srcLegDestLeg": "CASE='LEGLEG' yarn start:cmd",
    "start:usecase:srcLegDestNext": "CASE='LEGNEXT' yarn start:cmd",
    "start:usecase:srcNextDestLeg": "CASE='NEXTLEG' yarn start:cmd",
    "start:usecase:srcNextDestNext": "CASE='NEXTNEXT' yarn start:cmd",
    "start:usecase:srcLegDestLeg:debug": "CASE='LEGLEG' yarn start:cmd:debug",
    "start:usecase:srcLegDestNext:debug": "CASE='LEGNEXT' yarn start:cmd:debug",
    "start:usecase:srcNextDestLeg:debug": "CASE='NEXTLEG' yarn start:cmd:debug",
    "start:usecase:srcNextDestNext:debug": "CASE='NEXTNEXT' yarn start:cmd:debug",
    "start:cmd": "env-cmd -f .env nest start example",
    "start:cmd:debug": "env-cmd -f .env node --inspect-brk -r ts-node/register -r tsconfig-paths/register apps/example/src/main.ts",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch usecase",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/eventstore-interconnect-project/test/jest-e2e.json"
  },
  "dependencies": {
    "@eventstore/db-client": "^2.1.1",
    "@nestjs/common": "^7.6.18",
    "class-transformer": "^0.4.0",
    "class-validator": "0.13.1",
    "geteventstore-promise": "3.2.5",
    "nanoid": "^3.1.30",
    "reflect-metadata": "^0.1.13",
    "nestjs-pino-stackdriver": "^2.1.3"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "@nestjs/platform-express": "^7.6.18",
    "@nestjs/core": "^7.6.18",
    "@nestjs/terminus": "^7.2.0",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/testing": "^7.6.18",
    "@nestjs/schematics": "^8.0.0",
    "@swc-node/jest": "^1.4.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.11.9",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc-node/jest",
        {
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true,
          "allowJs": true,
          "swc": {
            "sourceMaps": "inline"
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@eventstore-interconnect/eventstore-interconnect(|/.*)$": "<rootDir>/libs/eventstore-interconnect/src/$1"
    }
  }
}
